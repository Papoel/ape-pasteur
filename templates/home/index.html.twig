{% extends 'layouts/base.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}

{% block body %}

    <header>
        {% include "layouts/partials/_navbar.html.twig" %}
    </header>

    {#{% if not app.user.isValide  %}
